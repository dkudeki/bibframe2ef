{
	"$schema": "http://json-schema.org/schema#",
	"$id": "https://worksets.htrc.illinois.edu/context/schema.json",
	"type": "object",
	"definitions": {
		"unique_name": {
			"type": "object",
			"properties": {
				"id": { "type": "string" },
				"type": { "type": "string" },
				"name": { "type": "string" }
			},
			"required": [ "name", "type" ]
		},
		"unique_name_array": {
			"type": "array",
			"items": { "$ref": "#/definitions/unique_name" }
		},
		"unique_id": {
			"type": "object",
			"properties": {
				"id": { "type" : "string"},
				"type": { "type": "string" },
				"name": { "type": "string" }
			},
			"required": [ "id", "type" ]
		},
		"unique_id_array": {
			"type": "array",
			"items": { "$ref": "#/definitions/unique_id" }
		},
		"string_array": {
			"type": "array",
			"items": { "type": "string" }
		}
	},
	"properties": {
		"metadata": {
			"type": "object",
			"properties": {
				"id": { "type": "string" },
				"type": { "type": "string" },
				"title": { "type": "string" },
				"enumerationChronology": { "type": [ "string", "null" ] },
				"volumeNumber": { "type": [ "integer", "string", "null" ] },
				"publisher": {
					"anyOf": [
						{ "$ref": "#/definitions/unique_name" },
						{ "$ref": "#/definitions/unique_name_array" }
					]
				},
				"pubPlace": {
					"anyOf": [
						{ "$ref": "#/definitions/unique_id" },
						{ "$ref": "#/definitions/unique_id_array" }
					]
				},
				"pubDate": { "type": [ "number", "string", "null" ] },
				"genre": {
					"anyOf": [
						{ "type": "string" },
						{ "$ref": "#/definitions/string_array" }
					]
				},
				"category": {
					"anyOf": [
						{ "type": "null" },
						{ "type": "string" },
						{ "$ref": "#/definitions/string_array" }
					]
				}
			},
			"required": [ "id", "type", "title" ]
		}
	},
	"required": [ "metadata" ]
}